{{#each mixes}}

<section id="{{slug}}" class="mix audio-player {{slug}}" data-rating="{{rating}}">
  <h3>{{title}}</h3>

  <div class="row no-gutter">
    <div class="col-xs-2 intense-only"></div>
    <div class="col-xs-10">
      <div class="progress-bar rating-bg">
        <div class="buffer">
        </div>
        <div class="played">
        </div>
      </div> 
    </div>
  </div>
  <div class="times">
    <span class="current-time"></span>
    <span class="divider">/</span>
    <span class="mix-length"></span>
  </div>

  <div class="audio-controls">
    <div class="audio-controls__background">
    </div>
    <div class="play-pause">
    </div>
  </div>

  <div class="mix__details">
    <div class="genres progressive"> 
      <span class="rating" data-rating="{{rating}}">
        V{{rating}}
      </span>
      {{genres}}
    </div>
    <div>
      <span class="date way-subdued">
        {{date}}
      </span>
      <span class="downloads">
        <a class="download" href="https://djmountainous.com/mixes/dj-mountainous-{{slug}}.mp3" download>mp3</a>
      </span>
    </div>  
    <div  class="fb-like" 
          data-href="https://www.djmountainous.com/?{{slug}}#mix" 
          data-width="300" 
          data-layout="button" 
          data-action="like" 
          data-colorscheme="light"
          data-size="small" 
          data-show-faces="true" 
          data-share="true">
    </div>
    
  </div> <!-- .mix__details -->

  <audio id="audio-va-tech-house">
    <source src="https://djmountainous.com/mixes/dj-mountainous-{{slug}}.m4a" type="audio/m4a">
    </source>
    <source src="https://djmountainous.com/mixes/dj-mountainous-{{slug}}.mp3" type="audio/mpeg"></source>
  </audio>
</section><!-- .mix -->

{{/each}}